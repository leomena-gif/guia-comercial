<div class="gc-login-page">
  <div class="gc-login-card">
    <div class="gc-form-card">
      <div class="gc-login-icon">
        <i class="bi bi-person-lock"></i>
      </div>

      <div style="text-align:center;margin-bottom:28px;">
        <h2 style="font-size:1.5rem;font-weight:800;letter-spacing:-.03em;color:var(--color-dark);">Acceso Administrador</h2>
        <p style="color:var(--color-muted);font-size:.875rem;margin-top:6px;">Ingresá con tus credenciales para gestionar la guía.</p>
      </div>

      <form action="/login" method="POST">
        <div class="gc-field">
          <label class="gc-label">Usuario</label>
          <div style="position:relative;">
            <i class="bi bi-person" style="position:absolute;left:12px;top:50%;transform:translateY(-50%);color:var(--color-muted);font-size:.9rem;pointer-events:none;"></i>
            <input type="text" class="gc-input" name="usuario" placeholder="Tu usuario" required style="padding-left:36px;">
          </div>
        </div>

        <div class="gc-field">
          <label class="gc-label">Contraseña</label>
          <div style="position:relative;">
            <i class="bi bi-lock" style="position:absolute;left:12px;top:50%;transform:translateY(-50%);color:var(--color-muted);font-size:.9rem;pointer-events:none;"></i>
            <input type="password" class="gc-input" name="password" placeholder="••••••••" required style="padding-left:36px;">
          </div>
        </div>

        <button type="submit" class="gc-btn gc-btn-dark gc-form-submit" style="margin-top:8px;">
          <i class="bi bi-box-arrow-in-right"></i> Ingresar
        </button>
      </form>

      {{#if error}}
      <div class="gc-alert gc-alert-danger" style="margin-top:16px;">
        <i class="bi bi-exclamation-circle-fill"></i>
        {{error}}
      </div>
      {{/if}}

      <div style="margin-top:24px;padding-top:20px;border-top:1px solid var(--color-border);text-align:center;">
        <a href="/" style="font-size:.8rem;color:var(--color-muted);display:inline-flex;align-items:center;gap:6px;">
          <i class="bi bi-arrow-left"></i> Volver al directorio
        </a>
      </div>
    </div>
  </div>
</div>
