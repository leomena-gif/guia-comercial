<h1 class="text-center mb-4">Directorio de Profesionales y Comercios</h1>

<div class="row">
  {{#each profesionales}}
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">{{nombre}}</h5>
          <span class="badge bg-info text-dark mb-2">{{rubro}}</span>
          <p class="card-text">{{descripcion}}</p>
          {{#if telefono}}
            <p class="card-text mb-1">
              <small class="text-muted"><i class="bi bi-telephone"></i> {{telefono}}</small>
            </p>
          {{/if}}
          {{#if web}}
            <a href="{{web}}" target="_blank" class="btn btn-outline-primary btn-sm mt-2">Visitar sitio web</a>
          {{else if email}}
            <a href="mailto:{{email}}" class="btn btn-outline-secondary btn-sm mt-2">Enviar email</a>
          {{/if}}
        </div>
      </div>
    </div>
  {{/each}}
</div>